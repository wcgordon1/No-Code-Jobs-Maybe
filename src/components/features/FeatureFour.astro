</section>
<section class="bg-purple-900 transform skew-y-6 -mt-72 lg:-mt-[26rem]">
  <div
    class="mx-auto max-w-7xl lg:px-16 md:px-12 px-8 xl:px-24 py-24 lg:py-52 items-center transform -skew-y-6">
    <div>
      <span class="text-sm font-medium text-slate-300 tracking-wide uppercase"
        >Complete Automation Solutions</span
      >
      <h2
        class="tracking-tight lg:text-5xl text-white font-semibold mt-6 text-3xl lg:text-balance">
        Building the Future of Business Automation Together
      </h2>
      <div class="max-w-xl mt-6">
        <p class="text-white">
          From simple task automation to complex business workflows, we connect you with 
          professionals who can transform your operations using leading no-code automation platforms.
        </p>
      </div>
    </div>
    <div
      class="gap-x-2 gap-y-14 lg:gap-12 grid grid-cols-1 lg:grid-cols-3 mt-12">
      {
        sections.map((section) => (
          <div>
            <div class="space-y-3">
              <div>
                <p class="mt-5 font-semibold text-white text-base">
                  {section.title}
                </p>
              </div>
              <p class="text-sm text-white">{section.description}</p>
            </div>
          </div>
        ))
      }
    </div>
    <div class="mt-16 flex gap-4">
      <a
        class="text-white items-center font-medium gap-3 inline-flex focus-visible:outline-2 focus-visible:outline-offset-2 focus:outline-none justify-center px-6 lg:px-8 ring-2 ring-transparent focus:ring-offset-2 focus:ring-blue-500 duration-200 py-3.5 rounded-full active:bg-blue-800 active:text-white bg-blue-500 hover:bg-blue-600 w-auto"
        title="View No-Code Automation Jobs"
        aria-label="Browse automation and integration jobs"
        href="/system/overview">
        View Jobs
      </a>
      <a
        class="text-blue-600 items-center font-medium gap-3 inline-flex focus-visible:outline-2 focus-visible:outline-offset-2 focus:outline-none justify-center px-6 lg:px-8 ring-2 ring-transparent focus:ring-offset-2 focus:ring-blue-500 duration-200 py-3.5 rounded-full active:bg-blue-800 active:text-white bg-blue-50 hover:bg-blue-100 w-auto"
