---

<section>
  <div class="mx-auto max-w-7xl lg:px-16 md:px-12 px-8 xl:px-24 py-24 items-center">
    <div class="max-w-xl">
      <h2 class="text-purple-900 font-semibold tracking-tight text-4xl">
        Simple, Transparent Pricing
      </h2>
      <p class="text-slate-500 mt-4">
        Post your no-code jobs to reach millions of candidates through Google Jobs and our network of job boards.
      </p>
    </div>

    <div class="grid grid-cols-1 gap-4 mt-12 lg:grid-cols-3 lg:gap-8">
      {
        pricingPlans.map((plan) => (
          <div class={`flex flex-col p-6 ${plan.cardBgClass} shadow-xl rounded-3xl`}>
            <div>
              <h3 class={`text-xl font-semibold ${plan.cardBgClass === "bg-purple-900" ? "text-white" : "text-purple-900"}`}>
                {plan.name}
              </h3>
              <p class={`mt-2 ${plan.descriptionColor} text-sm`}>{plan.description}</p>
              <p class="mt-8">
                <span class={`text-4xl font-bold ${plan.cardBgClass === "bg-purple-900" ? "text-white" : "text-purple-900"}`}>
                  ${plan.monthlyPrice}
                </span>
                <span class={plan.cardBgClass === "bg-purple-900" ? "text-purple-200" : "text-slate-500"}>
                  {plan.name === "Job Pack" ? "/5 posts" : plan.name === "Unlimited" ? "/month" : "/post"}
                </span>
              </p>
            </div>

            <ul 
              role="list" 
              class={`flex flex-col order-last mt-10 text-sm ${
                plan.cardBgClass === "bg-purple-900" ? "text-purple-200" : "text-slate-600"
              } gap-y-3`}
            >
              {plan.features.map((feature) => (
                <li class="flex items-center">
                  <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-circle-check" width="20" height="20" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                    <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                    <path d="M12 12m-9 0a9 9 0 1 0 18 0a9 9 0 1 0 -18 0"></path>
                    <path d="M9 12l2 2l4 -4"></path>
                  </svg>
                  <span class="ml-4">{feature}</span>
                </li>
              ))}
            </ul>
            <a 
              href="mailto:hello@nocodejobs.org" 
              class={`mt-8 block rounded-full ${plan.buttonClass} px-8 py-3 text-center text-sm font-semibold duration-200`}
            >
              {plan.name === "Unlimited" ? "Contact Sales" : "Get Started"}
            </a>
          </div>
        ))
      }
    </div>
  </div>
</section>
