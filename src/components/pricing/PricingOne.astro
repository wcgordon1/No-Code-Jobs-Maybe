  {
    name: "Single Post",
    monthlyPrice: "99",
    description: "Perfect for one-off hiring needs",
    cardBgClass: "bg-white", 
    descriptionColor: "text-slate-500",
    buttonClass: "bg-blue-50 hover:bg-blue-100 text-blue-600",
    features: [
      "30-day listing",
      "Google Jobs syndication",
      "Job board network distribution",
      "Email support"
    ],
    unavailableFeatures: [
      "Featured listing",
      "Social media promotion",
      "Priority placement",
      "Dedicated support"
    ],
  },
  {
    name: "Job Pack",
    monthlyPrice: "249",
    description: "Best value for multiple positions",
    cardBgClass: "bg-purple-900",
    descriptionColor: "text-purple-200", 
    buttonClass: "bg-white hover:bg-slate-50 text-purple-900",
    features: [
      "5 job postings",
      "60-day listings",
      "Featured listing placement",
      "Social media promotion",
      "Priority email support"
    ],
    unavailableFeatures: [
      "Priority placement",
      "Dedicated support"
    ],
  },
  {
    name: "Mega Pack",
    monthlyPrice: "749",
    description: "For high-volume hiring needs",
    cardBgClass: "bg-white",
    descriptionColor: "text-slate-500",
    buttonClass: "bg-blue-50 hover:bg-blue-100 text-blue-600",
    features: [
      "20 job posts",
      "60-day listings",
      "Premium placement",
      "Featured listings",
      "Social media promotion",
      "Dedicated account manager",
    ],
    unavailableFeatures: [],
  },
];

const extended = [
  {
    title: "Job Distribution",
    benefits: [
      "Google Jobs syndication",
      "Job board network",
      "Social media promotion"
    ],
  },
  {
    title: "Listing Features",
    benefits: [
      "Featured placement options",
      "Custom branding",
      "Rich media support"
    ],
  },
  {
    title: "Analytics & Reporting",
    benefits: [
      "View performance metrics",
      "Candidate insights",
      "Source tracking"
    ],
  },
  {
    title: "Support Services",
    benefits: [
      "Email support",
      "Priority assistance",
      "Dedicated manager (Enterprise)"
    ],
  },
  {
    title: "Additional Benefits",
    benefits: [
      "Company profile page",
      "Multiple user accounts",
      "Bulk posting tools"
    ],
  },
  {
    title: "Platform Features",
    benefits: [
      "Mobile optimization",
