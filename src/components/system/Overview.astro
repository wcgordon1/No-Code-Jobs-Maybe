<section class="bg-white">
  <div class="mx-auto relative px-8 lg:px-24 py-24 max-w-7xl">
    <div class="justify-center max-w-3xl">
      <div>
        <p class="text-purple-900 font-semibold leading-none text-5xl">
          Overview
        </p>
        <p class="text-slate-500 mt-5">Explore all pages and sections.</p>
      </div>
    </div>
    <div class="mt-12 lg:mt-24 space-y-12 lg:space-y-24">
      {
        content.map((section) => (
          <div>
            <p class="text-purple-900 font-semibold leading-none text-3xl">
              {section.title}
            </p>
            <div class="gap-12 mt-10 grid grid-cols-2 lg:grid-cols-5 md:grid-cols-3">
              {section.categories.map((category) => (
                <div class="flex flex-col justify-start text-sm gap-2 text-slate-500">
                  <p class="text-purple-900 text-xl font-semibold">
                    {category.name}
                  </p>
                  {category.links.map((link) => (
                    <a
                      class="hover:text-purple-900"
                      title="link to your page"
                      aria-label={link.name}
                      href={link.url}>
                      {link.name}
                    </a>
